<?xml version='1.0' encoding='utf-8'?>
<widget id="com.linger.mobile" version="0.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Linger</name>
    <description>
        Location-based instant messaging application.
    </description>
    <author email="alexkh13@gmail.com" href="https://plus.google.com/+AlexKhmelnitsky">
        Alex Khmelnitsky
    </author>
    <content src="index.html" />
    <log level="DEBUG"/>
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/icon.png" />
</widget>
